{
    "name": "@hebilicious/libsql-client",
    "version": "0.0.4",
    "keywords": [
        "libsql",
        "database",
        "sqlite",
        "serverless",
        "vercel",
        "netlify",
        "lambda"
    ],
    "description": "libSQL driver for TypeScript and JavaScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/Hebilicious/libsql-client-ts"
    },
    "authors": [
        "Jan Špaček <honza@chiselstrike.com>",
        "Pekka Enberg <penberg@chiselstrike.com>",
        "Jan Plhak <jp@chiselstrike.com>"
    ],
    "license": "MIT",
    "type": "module",
    "main": "lib-cjs/index.js",
    "types": "lib-esm/index.d.ts",
    "exports": {
        ".": {
            "types": "./lib-esm/index.d.ts",
            "import": {
                "workerd": "./lib-esm/web.js",
                "deno": "./lib-esm/web.js",
                "edge-light": "./lib-esm/web.js",
                "netlify": "./lib-esm/web.js",
                "bun": "./lib-esm/bun.js",
                "default": "./lib-esm/index.js"
            },
            "require": "./lib-cjs/index.js"
        },
        "./http": {
            "types": "./lib-esm/http.d.ts",
            "import": "./lib-esm/http.js",
            "require": "./lib-cjs/http.js"
        },
        "./ws": {
            "types": "./lib-esm/ws.d.ts",
            "import": "./lib-esm/ws.js",
            "require": "./lib-cjs/ws.js"
        },
        "./sqlite3": {
            "types": "./lib-esm/sqlite3.d.ts",
            "import": "./lib-esm/sqlite3.js",
            "require": "./lib-cjs/sqlite3.js"
        },
        "./web": {
            "types": "./lib-esm/web.d.ts",
            "import": "./lib-esm/web.js",
            "require": "./lib-cjs/web.js"
        },
        "./bun-sqlite": {
            "types": "./lib-esm/bun-sqlite.d.ts",
            "import": "./lib-esm/bun-sqlite.js",
            "require": "./lib-cjs/bun-sqlite.js"
        }
    },
    "typesVersions": {
        "*": {
            "http": [
                "./lib-esm/http.d.ts"
            ],
            "hrana": [
                "./lib-esm/hrana.d.ts"
            ],
            "sqlite3": [
                "./lib-esm/sqlite3.d.ts"
            ],
            "web": [
                "./lib-esm/web.d.ts"
            ],
            "bun": [
                "./lib-esm/bun.d.ts"
            ],
            "bun-sqlite": [
                "./lib-esm/bun-sqlite.d.ts"
            ]
        }
    },
    "files": [
        "lib-cjs/**",
        "lib-esm/**"
    ],
    "scripts": {
        "prepublishOnly": "npm run build",
        "prebuild": "rm -rf ./lib-cjs ./lib-esm",
        "build": "npm run build:cjs && npm run build:esm",
        "build:cjs": "tsc -p tsconfig.build-cjs.json",
        "build:esm": "tsc -p tsconfig.build-esm.json",
        "postbuild": "cp package-cjs.json ./lib-cjs/package.json",
        "test": "jest --runInBand",
        "test:bun": "bun test bun",
        "typecheck": "tsc --noEmit",
        "typedoc": "rm -rf ./docs && typedoc",
        "publish": "npm run build && npm publish --access public"
    },
    "dependencies": {
        "@libsql/hrana-client": "^0.5.0-pre.2",
        "better-sqlite3": "^8.0.1",
        "js-base64": "^3.7.5"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.3",
        "@types/jest": "^29.2.5",
        "@types/node": "^18.15.5",
        "bun-types": "^0.8.1",
        "jest": "^29.3.1",
        "ts-jest": "^29.0.5",
        "typedoc": "^0.23.28",
        "typescript": "^4.9.4"
    }
}
